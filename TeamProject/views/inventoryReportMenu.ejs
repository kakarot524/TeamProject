<!Doctype html>
<html>
  <head>
        <%include partial/mainNavBar%>
      
        <link rel="stylesheet" type="text/css" href="../assets/tablestyle.css"/>      

           
  </head>
  <body>

    

	<div style="margin-left: 250px;margin-top: -350px">
  
  
    <h1 style="font-size:40px; align-content:center;"><center><b>Inventory Report<b></center></h1>
    <br><br>
    
    <div class="row text-center">

                    <div class="col-lg-4 btn btn-success" style="background-color:blue; font-weight:bold; height:100px; width:300px; margin-left: 45px" >
                      

                      <h1 style="font-size:30px; align-content:center; color : white;" ><center><b><%= totalvalue %> </b></center></h1>
                      <br>

                        <p style="color: white"> Total Inventory Value</p>
                     </div>


                  <div class="col-lg-4 btn btn-success" style="background-color:grey; font-weight:bold; height:100px; margin-left:30px; width:300px;">
                    <h1 style="font-size:30px; align-content:center; color:white"><center><b><%= totalcount %> </b></center></h1>
                    <br>
                    <p style="color:white:" >Total Inventory Count</p>
                  </div>

                  <div class="col-lg-4 btn btn-success" style="background-color:black; height:100px; margin-left:30px; width:300px;">
                   <h1 style="font-size:30px; align-content:center; color:white;" ><center><b> <%= stocklow.length %> </b></center></h1>
                   <br>
                    <p style="color: white" >Low Stocks</p>
                  </div>
    </div>
<div class="col-lg-12">
    <div class="panel panel-default">
                            <div class="panel-heading">
                                Current Inventory List
                            </div>

      <table id="sort">

      <tr class="header" style="height:15px">
          <input style="margin-left:725px ; margin-top:7px" type="text" id="myInput" onkeyup="myFunction()" placeholder="Search by names.." title="Type in a name">
      </tr>

      <tr>
        <th>Inventory Category </th>
        <th>Name </th>
        <th>Price </th>
        <th>Stock</th>
        <th>Total Price</th>
        <th>Supplier Name </th>
        <th>Date Created</th>
      
    
      </tr>


      <% if(inventoryTable.length){
        for(var i = 0; i < inventoryTable.length; i++){%>
    
      <tr>
        <td><%= inventoryTable[i].product_name %></td>
        <td><%= inventoryTable[i].table_name %></td>
        <td><%= inventoryTable[i].price %></td>
        <td><%= inventoryTable[i].stock_count %></td>
        <td><%= inventoryTable[i].totalprice %></td>
        <td><%= inventoryTable[i].supplier_name %></td>
        <td><%= inventoryTable[i].created_date %></td>
     
  
      </tr> 
      <% }
      }else{ %>
      <h1>YOUR INVENTORY IS EMPTY.</h1>
      <% } %>

     


    </table>
  </div>
  </div>
</div>


<script>
function myFunction() {
  var input, filter, table, tr, td, i;
  input = document.getElementById("myInput");
  filter = input.value.toUpperCase();
  table = document.getElementById("sort");
  tr = table.getElementsByTagName("tr");
  for (i = 0; i < tr.length; i++) {
    td = tr[i].getElementsByTagName("td")[1];
    if (td) {
      if (td.innerHTML.toUpperCase().indexOf(filter) > -1) {
        tr[i].style.display = "";
      } else {
        tr[i].style.display = "none";
      }
    }       
  }
}
</script>

          




<footer class="container-fluid text-center">
  <p>Created By WIPRO IMS Team</p>
</footer>
  </body>
</html>



